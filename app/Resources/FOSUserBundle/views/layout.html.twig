<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
        <title>{% block title %}{% endblock %} | IDS</title>
        <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/login.css') }}">
    </head>
    <body>
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
        <div id="content-form" style="background-image: url(/images/bg-home.jpg);background-repeat:no-repeat;background-position:center">
        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        <script src="https://kit.fontawesome.com/7dea6a0c48.js"></script>
    </body>
</html>
