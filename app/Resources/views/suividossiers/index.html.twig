{% extends "base.html.twig" %}
{% block title %}Suivi dossiers physiques{% endblock %}

{% block page_title %}Suivi dossiers physiques{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    {{ parent() }}
    <div class="box box-primary">
        <div class="box-header with-border">
            <a href="{{ path('suividossiers_new') }}" class="btn btn-primary pull-right">Nouveau</a>
        </div>


        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>NIF</th>
                    <th>Agent</th>
                    <th>Date d'enl√®vement</th>
                    <th>Date de remise</th>
                    <th>Observation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for suiviDossier in suiviDossiers %}
                <tr>
                    <td><a href="{{ path('suividossiers_show', { 'id': suiviDossier.id }) }}">{{ suiviDossier.id }}</a></td>
                    <td>{{ suiviDossier.nif }}</td>
                    <td>{% if suiviDossier.dateEnlevement %}{{ suiviDossier.dateEnlevement|date('d-m-Y H:i:s') }}{% endif %}</td>
                    <td>{% if suiviDossier.dateRemise %}{{ suiviDossier.dateRemise|date('d-m-Y H:i:s') }}{% endif %}</td>
                    <td>{{ suiviDossier.observation|length > 20 ? suiviDossier.observation|slice(0, 20) ~ '...' : suiviDossier.observation  }}</td>
                    <td>
                        <a href="{{ path('suividossiers_show', { 'id': suiviDossier.id }) }}"><i class="fas fa-eye"></i> Voir</a>                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}