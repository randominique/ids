{% extends "base.html.twig" %}
{% block title %}Suivi dossiers physiques{% endblock %}

{% block page_title %}Suivi dossiers physiques{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    {{ parent() }}
    <div class="box box-primary">

        <div class="box-header with-border">
            <a href="{{ path('suividossiers_remettre', { 'id': suiviDossier.id }) }}" class="btn btn-primary pull-right"><i class="fas fa-arrow-alt-circle-right"></i> REMETTRE</a>
            <h3>Dossier {{ suiviDossier.nif }}</h3>
        </div>

        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>NIF</th>
                    <td>{{ suiviDossier.nif }}</td>
                </tr>
                <tr>
                    <th>Responsable qui a sorti le dossier</th>
                    <td>  {% if suiviDossier.responsableSortie %}{{ suiviDossier.responsableSortie.nom }} {{ suiviDossier.responsableSortie.prenom }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Agent qui a pris le dossier</th>
                    <td>{{ suiviDossier.agent.nom }} {{ suiviDossier.agent.prenom }}</td>
                </tr>
                <tr>
                    <th>Date d'enlèvement</th>
                    <td>{% if suiviDossier.dateEnlevement %}{{ suiviDossier.dateEnlevement|date('d-m-Y H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Date de remise</th>
                    <td>{% if suiviDossier.dateRemise %}{{ suiviDossier.dateRemise|date('d-m-Y H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Responsable qui a reçu le dossier</th>
                    <td>  {% if suiviDossier.getResponsableRemise %}{{ suiviDossier.getResponsableRemise.nom }} {{ suiviDossier.getResponsableRemise.prenom }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Observation</th>
                    <td>{{ suiviDossier.observation }}</td>
                </tr>
            </tbody>
        </table>
        <div class="box-footer with-border">
            <a href="{{ path('suividossiers_index') }}" class="btn btn-default"><i class="fas fa-arrow-left"></i> Rétour à la liste</a>
        </div>
    </div>
{% endblock %}