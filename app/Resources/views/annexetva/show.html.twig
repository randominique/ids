{% extends "base.html.twig" %}
{% block title %}Annexe TVA{% endblock %}

{% block page_title %}Annexe TVA{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    {{ parent() }}
    <div class="box box-primary">

        <div class="box-header with-border">
            <h3>Dossier {{ annexeTva.nif }}</h3>
        </div>

        <table class="table table-striped table-hover">

            <tbody>
                <tr>
                    <th>NIF</th>
                    <td>{{ annexeTva.nif }}</td>
                </tr>
                <tr>
                    <th>Date d'envoi</th>
                    <td>{% if annexeTva.dateEnvoi %}{{ annexeTva.dateEnvoi|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Date de réponse</th>
                    <td>{% if annexeTva.dateReponse %}{{ annexeTva.dateReponse|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Observation</th>
                    <td>{{ annexeTva.observation }}</td>
                </tr>
            </tbody>
        </table>
    
        <div class="box-footer with-border">
            <a href="{{ path('annexe-tva_edit', { 'id': annexeTva.id }) }}" class="btn btn-primary pull-right"><i class="fas fa-edit"></i>Modifier</a>
            <a href="{{ path('annexe-tva_index') }}" class="btn btn-default"><i class="fas fa-arrow-left"></i> Rétour à la liste</a>
        </div>
    </div>
{% endblock %}
