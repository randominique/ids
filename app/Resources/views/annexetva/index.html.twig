{% extends "base.html.twig" %}
{% block title %}Annexe TVA{% endblock %}

{% block page_title %}Annexe TVA{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    {{ parent() }}
    <div class="box box-primary">
        <div class="box-header with-border">
        </div>


        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>NIF</th>
                    <th>Date d'envoi</th>
                    <th>Date de réponse</th>
                    <th>Observation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
        {% for annexeTva in annexeTvas %}
            <tr>
                <td>{{ annexeTva.nif }}</td>
                <td>{% if annexeTva.date %}{{ annexeTva.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if annexeTva.dateReponse %}{{ annexeTva.dateReponse|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ annexeTva.observation|length > 20 ? annexeTva.observation|slice(0, 20) ~ '...' : annexeTva.observation  }}</td>
                <td>
                    <a href="{{ path('annexe-tva_show', { 'id': annexeTva.id }) }}"><i class="fas fa-eye"></i> Voir</a>
                    |
                    <a href="{{ path('annexe-tva_edit', { 'id': annexeTva.id }) }}"><i class="fas fa-edit"></i> Mettre à jour</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
