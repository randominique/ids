{% extends "base.html.twig" %}

{% block page_title %}
  <h1 class="mytitle">Dossiers_annee_controle</h1>
{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
  <div class="info-box-content">
      <span class="info-box-text">Nbre enreg.</span>
      <span class="info-box-number">{{ nbreContrib }}</span>
  </div>
  <div class="box box-primary">
    <div class="col-lg-12">
      <div class="navigation">
        {{ knp_pagination_render(dossiers) }}
      </div>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>N° Dossier</th>	
          <th>NIF</th>	
          <th>id dossier</th>	
          <th>année</th>	
          <th>Type contrôle</th>	
          <th>date notification définitive</th>	
          <th>Type impôt</th>	
          <th>Etape courante</th>	
          <th style="text-align:right">Montant principal</th>	
          <th style="text-align:right">Montant amende</th>	
          <th style="text-align:right">Montant total</th>	
        </tr>
      </thead>
      <tbody>
        {% for dossier in dossiers %}																								
          <tr>
            <td>{{ dossier.uniqid }}</td>
            <td>{{ dossier.nif|number_format(0,',',' ') }}</td>
            <td>{{ dossier.idDossier|number_format(0,',',' ') }}</td>
            <td>{{ dossier.anneeControle }}</td>
            <td>{{ dossier.typeControle }}</td>
            <td>{{ dossier.dateNotificationDefinitive|date('d-m-Y') }}</td>
            <td>{{ dossier.typeImpot }}</td>
            <td>{{ dossier.etapeCourante }}</td>
            <td style="text-align:right">{{ dossier.montantPrincipal|number_format(0,',',' ') }}</td>
            <td style="text-align:right">{{ dossier.montantAmende|number_format(0,',',' ') }}</td>
            <td style="text-align:right">{{ dossier.montantTotal|number_format(0,',',' ') }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}