{% extends "base.html.twig" %}

{% block title %}Users_list{% endblock %}

{% block page_title %}
  <h1 class="mytitle">Users_list</h1>
{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
<div class="box box-primary">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>id</th>	
        <th>idTypeUser</th>	
        <th>idCentreFiscal</th>	
        <th>idChef</th>	
        <th>firstName</th>	
        <th>lastName</th>	
        <th>fullName</th>	
        <th>email</th>	
        <th>password</th>	
        <th>hash</th>	
        <th>lastActivity</th>	
        <th>archive</th>	
        <th>createTime</th>	
        <th>updateTime</th>	
      </tr>
    </thead>
    <tbody>
      {% for user in users %}																								
        <tr>
          <td>{{ user.id|number_format(0,',',' ') }}</td>
          <td>{{ user.idTypeUser }}</td>
          <td>{{ user.idCentreFiscal }}</td>
          <td>{{ user.idChef }}</td>
          <td>{{ user.firstName }}</td>
          <td>{{ user.lastName }}</td>
          <td>{{ user.fullName }}</td>
          <td>{{ user.email }}</td>
          <td>{{ user.password }}</td>
          <td>{{ user.hash }}</td>
          <td>{{ user.lastActivity|date('Y-m-d H:i:s') }}</td>
          <td>{{ user.archive }}</td>
          <td>{{ user.createTime|date('Y-m-d H:i:s') }}</td>
          <td>{{ user.updateTime|date('Y-m-d H:i:s') }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
