{% block page_title %}<h1 class="mytitle">Liste des utilisateurs</h1>{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

<div class="box box-primary">
    <div class="box-header with-border">
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary pull-right">
                <i class="fas fa-plus-circle"></i> Ajouter un utilisateur
            </a>
        {% endif %}
        {# <h3 class="box-title">
            <div class="count">
                {{ users.getTotalItemCount }} utilisateurs
            </div>
        </h3> #}
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                {# <th{% if users.isSorted('u.id') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(users, "ID", 'u.id') }}
                </th> #}
                <th>Username</th>
                
                <th>
                    Email
                </th>
                {# sans effet : <th{% if users.isSorted('u.service') %} class="sorted"{% endif %}> #}
                <th>
                    Service
                </th>
               
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    {# <td>
                        {{ user.id }}
                    </td> #}
                    <td>
                        {{ user.username }}
                    </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        {{ user.service }}
                    </td>
                   
                   
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
