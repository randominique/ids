{% extends "base.html.twig" %}
{% block title %}Services{% endblock %}

{% block page_title %}<h1 class="mytitle">Services</h1>{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    <div class="box box-primary">
        <div class="box-header with-border">
            <p class="pull-left"><a href="{{ path('d_parametres_service_new') }}" class="btn btn-primary">Ajouter</a></p>
            {# <h3 class="box-title">Liste</h3> #}
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    {#<th>ID</th>#}
                    <th>Nom</th>
                    <th>Chef de service</th>
                    <th class="text-center">Effectif</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr>
                   {# <td>{{ service.id }}</td>#}
                    <td>{{ service.nom }}</td>
                    <td>
                        {% if service.chef %}
                            {{ service.chef.nom }}  {{ service.chef.prenom }}
                        {% else %}
                            NA
                        {% endif %}
                    </td>
                    <td class='text-center'>{{ service.users | length }}</td>
                    <td>
                        <a href="{{ path('d_parametres_service_update', {'service': service.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>

{% endblock %}