{% extends "base.html.twig" %}
{% block title %}Attributions{% endblock %}

{% block page_title %}<h1 class="mytitle">Attributions</h1>{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    <div class="box box-primary">
        <div class="box-header with-border">
            <p class="pull-left"><a href="{{ path('d_parametres_attribution_new') }}" class="btn btn-primary">Ajouter</a></p>
            {# <h3 class="box-title">Liste</h3> #}
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Attribution</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for attribution in attributions %}
                <tr>
                    <td>{{ attribution.id }}</td>
                    <td>{{ attribution.attributionDesc }}</td>
                    <td>
                        <a href="{{ path('d_parametres_attribution_update', {'attribution': attribution.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>

{% endblock %}