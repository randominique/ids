{% extends "base.html.twig" %}
{% block title %}Taxe{% endblock %}

{% block page_title %}Taxe{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    <div class="box box-primary">
        <div class="box-header with-border">
            <p class="pull-right"><a href="{{ path('new_assujettissement_setting') }}" class="btn btn-primary">Ajouter</a></p>
            <h3 class="box-title">Tax</h3>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Membres</th>
                </tr>
            </thead>
            <tbody>
            {% for tax_famille in tax_familles %}
                <tr>
                    <td><a href="{{ path('show_assujettissement_setting', {'taxe': tax_famille.id}) }}">{{ tax_famille.name }}</a></td>
                    <td>
                        <a href="{{ path('show_assujettissement_setting', {'taxe': tax_famille.id}) }}">
                            {{ tax_famille.membre | length }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>

{% endblock %}