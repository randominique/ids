{% extends "base.html.twig" %}
{% block title %}Gestion des communications{% endblock %}

{% block page_title %}Gestion des communications{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    {{ parent() }}
    <div class="box box-primary">
        <div class="box-header with-border">
            <a href="{{ path('annexe-tva_new') }}" class="btn btn-primary pull-right">Nouveau</a>
        </div>


        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>NIF</th>
                    <th>Contact</th>
                    <th>Objet</th>
                    <th>Observation</th>
                    <th>
                        {{ knp_pagination_sortable(communications, "Date", 'c.date') }}
                    </th>
                </tr>
            </thead>
            <tbody>
        {% for communication in communications %}
            <tr>
                <td>{{ communication.type }}</td>
                <td>{{ communication.nif }}</td>
                <td>{{ communication.contact }}</td>
                <td>{{ communication.objet }}</td>
                <td>{{ communication.observation }}</td>
                <td>{{ communication.date | date('d-m-Y H:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(communications) }}
    </div>
</div>
{% endblock %}
