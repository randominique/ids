{% extends "::base.html.twig" %}

{% block title %}Défaillants chronique{% endblock %}

{% block page_title %}Défaillants chronique{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    {{ parent() }}
    <div class="box box-primary">

        <div id="search">

            <form class="form-inline pull-right" method="GET">
            
                <div class="form-group">
                    <select class="form-control">
                    <option selected>Type d'impôt</option>
                    <option>TVA</option>
                    <option>IRSA</option>
                    <option>IR</option>
                    <option>IRCM</option>
                    </select>
                </div>

            </form>


            <form class="form-inline" method="GET">
                <div class="form-group">
                    <input type="text" class="form-control" id="date_timepicker_start" {% if date_du %}value="{{ date_du }}"{% endif %} placeholder="Date du">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="date_timepicker_end" {% if date_au %}value="{{ date_au }}"{% endif %} placeholder="Date au">
                </div>
                <button type="submit" class="btn btn-default">Recherche</button>
                <a href="#" class="button btn btn-default">Réinitialiser</a>
            </form>


        </div>

    </div>
{% endblock %}
