{% extends "base.html.twig" %}
{% block title %}Demande de redressement de paiement{% endblock %}

{% block page_title %}Demande de redressement de paiement{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

    {{ parent() }}
    <div class="box box-primary">
        <div id="search">

            <form class="form-inline pull-right" method="GET">
            
                <div class="form-group">
                    <select class="form-control">
                    <option selected>Type d'impôt</option>
                    <option>TVA</option>
                    <option>IRSA</option>
                    <option>IR</option>
                    <option>IRCM</option>
                    </select>
                </div>

            </form>
            <span class="clearfix"></span>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>NIF</th>
                    <th>Raison Social</th>
                    <th>Secteur d'activité</th>
                </tr>
            </thead>
            <tbody>
                {% for contribuable in demandeRedressement %}
                <tr>
                    <td>{{ contribuable.nif }}</td>
                    <td>
                        {{ contribuable.contribuable ? contribuable.contribuable.nomcommercial : 'NA'  }}
                    </td>
                    <td>
                        {{ contribuable.contribuable ? contribuable.contribuable.nomcommercial : 'NA'  }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}