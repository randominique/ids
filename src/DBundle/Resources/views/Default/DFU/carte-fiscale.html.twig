{% extends "::base.html.twig" %}

{% block title %}Carte fiscale{% endblock %}

{% block page_title %}Carte fiscale{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
<div class="box box-primary">
    <div class="box-header with-border">
        <p><a href="{{ path('dfu_show', {'contribuable_nif': contribuable_nif}) }}" class="btn btn-default">Retour</a></p>
    </div>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>NIF</th>
                <th>Carte num</th>
                <th>Carte type</th>
                <th>Carte date</th>
            </tr>
        </thead>
        <tbody>
        {% for cartefiscale in cartefiscales %}
            <tr>
                <td>{{ cartefiscale.nif }}</td>
                <td>{{ cartefiscale.carteNum }}</td>
                <td>{{ cartefiscale.carteTypeNo }}</td>
                <td>{{ cartefiscale.carteDate | date('d/m/Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% if cartefiscales.getTotalItemCount == 0 %}<p style="text-align: center; padding: 50px;">Vide</p>{% endif %}
<div class="navigation">
    {{ knp_pagination_render(cartefiscales) }}
</div>
</div>
{% endblock %}