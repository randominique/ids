{% extends "base.html.twig" %}
{% block title %}Nature du courrier entrant{% endblock %}

{% block page_title %}
<h1 class="mytitle" style="text-align:center;background-color:#0085a6;color:white;font-size:20px;padding:5px;">Nature de la t√¢che</h1>
{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

	<div class="box box-primary">
	    <div class="box-header with-border">
	        <a href="{{ path('new_tache_cat') }}" class="btn btn-primary align-center " style="width:120px">Ajouter</a>
	        {# <h3 class="box-title" class="btn btn-primary align-center " style="width:120px">Nouveau</h3> #}
	    </div>
    	<table class="table table-striped table-hover">
	        <thead>
	            <tr>
	                <th>ID</th>
	                <th>Nom</th>
	                <th>Actions</th>
	            </tr>
	        </thead>
	        <tbody>
	        {% for categorie in categories %}
	            <tr>
	                <td>
	                	{{ categorie.id }}
	                </td>
	                <td>
	                	{{ categorie.name }}
	                </td>
	                <td>
	                	<a href="{{ path('edit_tache_cat', { 'nature': categorie.id }) }}"><i class="fas fa-edit"></i> </a>
	                </td>
	            </tr>
	        {%  endfor %}
	    	</tbody>
	    </table>

	    {% if categories.getTotalItemCount == 0 %}
	    	<p class="padding">Vide</p>
	    {% endif %}

        <div class="navigation">
		    {{ knp_pagination_render(categories) }}
		</div>
	</div>

{% endblock %}