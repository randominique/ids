{% extends "base.html.twig" %}
{% block title %}Nature du courrier sortant{% endblock %}

{% block page_title %}Nature du courrier sortant{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}

	<div class="box box-primary">
	    <div class="box-header with-border">
	        <a href="{{ path('new_sortant_cat') }}" class="btn btn-primary pull-left" style="width:120px">Ajouter</a>
	    </div>
			<div class="navigation">
		    {{ knp_pagination_render(categories) }}
			</div>
     	<table class="table table-striped table-hover">
	        <thead>
	            <tr>
	                <th>ID</th>
	                <th>Nom</th>
	                <th>Actions</th>
	            </tr>
	        </thead>
	        <tbody>
	        {% for categorie in categories %}
	            <tr>
	                <td>
	                	{{ categorie.id }}
	                </td>
	                <td>
	                	{{ categorie.name }}
	                </td>
	                <td>
	                	<a href="{{ path('edit_sortant_cat', { 'nature': categorie.id }) }}"><i class="fas fa-edit"></i> </a>
	                </td>
	            </tr>
	        {%  endfor %}
	    	</tbody>
	    </table>

	    {% if categories.getTotalItemCount == 0 %}
	    	<p class="padding">Vide</p>
	    {% endif %}

	</div>

{% endblock %}